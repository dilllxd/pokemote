# Pokemote MCP Server Configuration

# Server Ports
PORT=3000
MCP_PORT=3333

# Authentication Settings
# Enable/disable API key authentication (default: true)
MCP_AUTH_ENABLED=true

# API Keys (comma-separated for multiple keys)
# Generate secure keys that start with 'sk-'
# Example: sk-1234567890abcdef,sk-abcdef1234567890
MCP_API_KEYS=sk-your-api-key-here,sk-another-key-here

# Security Settings
# Optional: restrict access to specific hostnames (comma-separated)
# MCP_ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Optional: restrict access to specific origins (comma-separated)
# MCP_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Optional: enable DNS protection (default: false)
MCP_DNS_PROTECT=false